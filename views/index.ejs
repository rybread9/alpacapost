<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>

    <header class="jumbotron">
      <% include ./partials/header.ejs %>
      <nav>
        <ul>
          <!-- FOR LOGGED IN USERS -->
          <% if(currentUser){%>
            <!-- create new postcard -->
            <li> <a href="/alpacapost/new">Create New Postcard</a> </li>
            <!-- log out -->
            <li>
              <form action="/sessions?_method=DELETE" method="POST">
                <input type="submit" name="" value="Logout" />
              </form>
            </li>
            <!-- FOR USERS NOT LOGGED IN -->
          <% } else { %>
            <!-- login -->
            <li> <a href="/sessions/new">Log In</a> </li>
            <!-- create new user -->
            <li> <a href="/users/new">Register</a> </li>
          <% } %>

        </ul>
      </nav>
    </header>
    <div class="above">

      <h2>
        <!-- greet user or ask to make account -->
        <% if(currentUser){%>
          Welcome <%=currentUser.username%>!
          <h2>Click on an image to begin creating your postcard.</h2>

        <% } else { %>
          Welcome! Please sign in or register to begin sending postcards.
        <% } %>
      </h2>


    </div>

    <div class="container-fluid">
      <!-- container for all images -->
      <div class="allImageContainer">
        <!-- break images up into rows -->
        <div class="row ">

          <% for (let i=0; i < postcards.length; i++) { %>
            <!-- break images up into columns of 4 -->
            <div class="column-sm-4">
              <!-- make the image a link that goes to the show page of the postcard -->
              <a class="cardlink" href="/alpacapost/<%=postcards[i].id%>"><img  class="cardimg" src="<%=postcards[i].frontImage%>"></a>

            </div>
          <% } %>

        </div>

      </div>
    </div>



  </body>
</html>
