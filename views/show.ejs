<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>

    <!-- NAV -->
    <% include ./partials/nav.ejs%>

    <div class="container">
      <!-- contains all page content -->
      <div class="show-card flip-card">
        <div class="flip-card-inner">
          <!-- postcard image-->
          <div class="show-postcard flip-card-front">
            <img id="show-img" src="<%= postcard.frontImage %>" />
          </div>

          <!-- message -->
          <% if(currentUser){%>
            <!-- if there is a message saved -->
            <% if (postcard.message !== '') { %>
            <div>
              <div class="flip-card-back">
                <p id="message-text">
                  <%= postcard.message %>
                </p>
              </div>

          </div>
          <% } else { %>
            <div class="flip-card-back">
              <a class="show-link btn" href="/alpacapost/<%= postcard.id %>/edit">ADD MESSAGE</a>
            </div>
          <% } %>

        </div>

        <!-- BUTTONS -->
        <div class="bottom">
          <a class="show-link btn" href="/alpacapost/<%= postcard.id %>/edit">EDIT</a>

          <form class="show-link" action="/alpacapost/<%=postcard.id%>?_method=DELETE" method="POST">
            <input class="show-link" type="submit" value="DELETE" />
          </form>

          <!-- <a class="show-link btn" href="mailto:<%= postcard.sendToEmail %>">SEND POSTCARD</a> -->
        </div>

        <form class="show-link" action="/alpacapost/<%=postcard.id%>?_method=DELETE" method="POST">
          <input class="show-link" type="submit" value="DELETE" />
        </form>



        <% } else { %>
        <p>To begin sending postcards, please log in or register.</p>
        <% } %>
      </div>
    </div>


  </body>
  <% include ./partials/footer.ejs %>
</html>
