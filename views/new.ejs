  <body>
    <h1>Create Your Postcard</h1>
        <form action="/alpacapost" method="POST">
            Front Image: <input type="img" name="frontImage" placeholder="image URL"/><br/>
            Dear: <input type="text" name="sendToName" placeholder="receiver's name here"/><br/>
            <!-- Send To: <input type="email" name="sendToEmail" placeholder="receiver's email here"/><br/> -->
